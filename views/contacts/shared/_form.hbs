  <form method="POST"  action="/contacts/{{#if contact.id}} {{contact.id}}?_method=PUT{{/if}}" class="well">
    <div class="row">
      <div class="col-md-6">
        <div class="form-group">
          <label for="first_name">First Name</label>
          <input type="text" name="first_name" class="form-control" id="first_name" placeholder=" {{contact.first_name}} ">
        </div>
      </div>
      <div class="col-md-6">
        <div class="form-group">
          <label for="last_name">Last Name</label>
          <input type="text" name="last_name" class="form-control" id="last_name" placeholder="{{contact.last_name}}">
        </div>
      </div>
      <div class="col-md-6">
        <div class="form-group">
          <label for="phone_number">Phone Number</label>
          <input type="text" name="phone_number" class="form-control" id="phone_number" placeholder="{{contact.phone_number}}">
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-6">
        <div class="form-group">
          <label for="email_address">Email Address</label>
          <input type="text" name="email_address" class="form-control" id="email_address" placeholder="{{contact.email_address}}">
        </div>
      </div>
      <div class="col-md-6">
        <div class="form-group">
          <label for="line_1">Address Line 1</label>
          <input type="text" name="line_1" class="form-control" id="line_1" placeholder="{{contact.line_1}}">
      </div>
    </div>
    <div class="col-md-6">
      <div class="form-group">
        <label for="line_2">Address Line 2</label>
        <input type="text" name="line_2" class="form-control" id="line_2" placeholder="{{contact.line_2}}">
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <label for="city">City</label>
        <input type="text" name="city" class="form-control" id="city" placeholder="{{contact.city}}">
      </div>
    </div>
    <div class="col-md-6">
      <div class="form-group">
        <label for="zip">Zip</label>
        <input type="number" name="zip" value="98126" class="form-control" id="zip" placeholder="{{contact.zip}}">
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <div class="form-group">
        <label for="poster_url">Contact Picture URL</label>
        <input type="text" name="poster_url" class="form-control" id="poster_url" placeholder="{{contact.poster_url}}">
      </div>
    </div>
  </div>
    <button type="submit" class="btn btn-default">Submit</button>
  </form>
